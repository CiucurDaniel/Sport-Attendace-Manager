@model SportAttendanceSystem.Models.Student

@{
    ViewBag.Title = "Delete";
}

<div class="form-horizontal">
    <h2>Delete a Student From School</h2>
    <hr />
    <div class="form-group row">
        @Html.LabelFor(model => model.FirstName, "First Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.LastName, "Last Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Email, "Email Address", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Sport.Description, "Sport Description", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Sport.Description, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group row justify-content-sm-between">
            <div class="col-md-2">
                @Html.ActionLink("Cancel", "Index")
            </div>
            <div class="col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    }
</div>

